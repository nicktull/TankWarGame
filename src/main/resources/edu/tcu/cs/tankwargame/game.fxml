<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ProgressBar?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.tcu.cs.tankwargame.controllers.GameController">
    <top>
        <VBox spacing="10" style="-fx-background-color: #000000; -fx-padding: 10;">
            <Label fx:id="scoreLabel" text="Score: 0" style="-fx-text-fill: lime; -fx-font-family: 'Press Start 2P'; -fx-font-size: 16px;"/>
            <ProgressBar fx:id="healthBar" prefWidth="200" progress="1" style="-fx-accent: red;"/>
            <Label fx:id="enemyCountLabel" text="Enemies Left: 6" style="-fx-text-fill: white; -fx-font-family: 'Press Start 2P'; -fx-font-size: 16px;"/>
        </VBox>
    </top>
    <center>
        <Pane fx:id="gamePane" prefHeight="600" prefWidth="800" style="-fx-background-color: #2e2e2e;">
            <!-- Game components like tanks and missiles will be added here dynamically -->
        </Pane>
    </center>
</BorderPane>
